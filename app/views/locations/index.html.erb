<h1>locations</h1>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @locations.each do |location| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= location.name %></h2>
        <h6><%= location.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", location_path(location) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>